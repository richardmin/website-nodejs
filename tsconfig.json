{
    "compilerOptions": {
        // should be es6. https://github.com/TypeStrong/ts-node/issues/182
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "ts-build",
        "jsx": "preserve",
        "types": ["node"]
    },
    "exclude": [
        "node_modules"
    ]
}